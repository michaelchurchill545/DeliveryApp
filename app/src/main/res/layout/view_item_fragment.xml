<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_item"
    android:background="@drawable/custom_bg"
    android:clickable="true">

    <ImageView
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:id="@+id/item_icon"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_local_pizza"
        android:layout_alignTop="@+id/item_name"
        android:layout_toLeftOf="@+id/item_name"
        android:layout_toStartOf="@+id/item_name"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/item_name"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Example Item Name"
        android:layout_marginTop="42dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/item_price"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="$99.99"
        android:layout_marginTop="72dp"
        android:layout_alignLeft="@+id/item_name"
        android:layout_alignStart="@+id/item_name" />

    <TextView
        android:layout_width="256dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/item_description"
        android:textSize="18dp"
        android:textColor="#000000"
        android:text="This is the most glorious pizza you'll ever read a description of. Forfeit your life now! Muahaha!"
        android:layout_below="@+id/item_name"
        android:layout_alignLeft="@+id/item_icon"
        android:layout_alignStart="@+id/item_icon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp" />

</RelativeLayout>