<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Login.Register"
    tools:showIn="@layout/activity_register">

    <TextView
        android:id="@+id/Username"
        android:layout_height="wrap_content"
        android:text="StudentID"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <EditText
        android:id="@+id/Usernamefield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_below="@+id/Username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/PasswordName"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Usernamefield"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Passfield"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PasswordName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/DormBuilding"
        android:layout_height="wrap_content"
        android:text="Dorm Building"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Passfield"
        android:layout_alignEnd="@+id/roomnumber" />

    <Spinner
        android:id="@+id/building"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DormBuilding"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/SchoolName"
        android:layout_height="wrap_content"
        android:text="School"
        android:layout_width="wrap_content"
        android:layout_below="@+id/building"
        android:layout_alignStart="@+id/building" />

    <Spinner
        android:id="@+id/school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SchoolName"
        android:layout_alignStart="@+id/SchoolName" />

    <TextView
        android:id="@+id/roomnumber"
        android:layout_height="wrap_content"
        android:text="Room Number"
        android:layout_width="wrap_content"
        android:layout_below="@+id/school"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/CVRoomNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomnumber"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/register"
        android:layout_height="wrap_content"
        android:text="register"
        android:layout_width="match_parent"
        android:layout_below="@+id/CVRoomNumber"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
